<div class="page-header">
    <h2 class="title">Rent A Movie</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <rent-button link="<%= rent_a_movie_movies_path %>"></rent-button>      
    </div>
  </div>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-sm-6 col-lg-3">
        <movie-card 
          title="<%= movie.title %>"
          year="<%= movie.year %>"
          link="<%= movie_path(movie) %>"
          is-selectable="true"
          background-image="<%= movie.image_path %>">
        </movie-card>
      </div>
    <% end %>
  </div>  
</div>