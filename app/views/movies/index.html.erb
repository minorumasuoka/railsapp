<div class="page-header">
  <h2 class="title">Movies</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'New Movie', new_movie_path, {class: 'btn btn-primary btn-lg float-right mb-5'} %>
    </div>
  </div>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-sm-6 col-lg-3">
        <movie-card 
          title="<%= movie.title %>"
          year="<%= movie.year %>"
          link="<%= edit_movie_path(movie) %>"
          remove-action="<%= movie_path(movie) %>"
          background-image="<%= movie.image_path %>">
        </movie-card>
      </div>
    <% end %>
  </div>  
</div>
