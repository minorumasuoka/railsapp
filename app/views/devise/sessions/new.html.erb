<div class="page-header">
  <h2 class="title">Log in</h2>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>  
    <div class="form-group row">
      <%= form.label :email, {class: 'col-sm-4 col-lg-2 col-form-label col-form-label-lg'} %>  
      <div class="col-sm-8 col-lg-10">
        <%= form.text_field :email, {placeholder: 'Email', class: 'form-control form-control-md', autofocus: true} %>      
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :password, {class: 'col-sm-4 col-lg-2 col-form-label col-form-label-lg'} %>  
      <div class="col-sm-8 col-lg-10">
        <%= form.password_field :password, {placeholder: 'Password', class: 'form-control form-control-md', autocomplete: 'off'} %>      
      </div>
    </div>
    <div class="form-group row">      
      <div class="col-sm-12 text-center">        
        <%= form.submit 'Login', class: 'btn btn-primary btn-lg mt-4 pl-5 pr-5' %>        
      </div>
    </div>    
  <% end %>
</div>
